<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoPopsUI.Views.BrowserPage"
             xmlns:viewmodels="clr-namespace:NoPopsUI.Maui.ViewModels;assembly=NoPopsUI.Maui">
    <ContentPage.BindingContext>
        <viewmodels:Browser />
    </ContentPage.BindingContext>
    <Shell.TitleView>
        <HorizontalStackLayout>
            <Picker
                x:Name="WebsitePicker"
                Title="{Binding WebsitePickerTitle}"
                ItemsSource="{Binding Websites}"
                ItemDisplayBinding="{Binding SelectedWebsite.Name}"
                SelectedItem="{Binding SelectedWebsite}" >
            </Picker>
            <Button
                x:Name="OptionsButton"
                Text="{Binding OptionsButtonText}"
                Command="{Binding OptionsCommand}"
                CommandParameter="{Binding WebsitesParameter}"
                HorizontalOptions="Center"
                VerticalOptions="End" />
        </HorizontalStackLayout>
    </Shell.TitleView>
    <WebView
        x:Name="CustomWebView"
        Source="{Binding SanitizedCustomWebViewSource}"
        HorizontalOptions="Fill"
        VerticalOptions="FillAndExpand" />
</ContentPage>