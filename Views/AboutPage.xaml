<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:NoPopsUI.Models"
             x:Class="NoPopsUI.Views.AboutPage">
    <ContentPage.BindingContext>
		<models:About />
    </ContentPage.BindingContext>
    <VerticalStackLayout
        Margin="5"
        Spacing="5">
        <Image 
            Source="logo_nopopsui.png"
            SemanticProperties.Description="No Pops U I app logo"
            HeightRequest="64" />
        <Label
            x:Name="AppTitleLabel"
            FontSize="22"
            FontAttributes="Bold"
            Text="{Binding Title}" />
        <Label
            x:Name="AppVersionLabel"
            FontSize="22"
            Text="{Binding Version}" />
        <Label
            x:Name="AppDescriptionLabel"
            Text="{Binding Description}"
            VerticalOptions="FillAndExpand" />        
        <Button
            Text="Source on GitHub" 
            Clicked="OnGoToGitHubProjectButtonClicked" />
    </VerticalStackLayout>
</ContentPage>