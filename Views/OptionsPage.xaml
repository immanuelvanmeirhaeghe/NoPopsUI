<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoPopsUI.Views.OptionsPage"
             Title="Options"
             xmlns:viewmodels="clr-namespace:NoPopsUI.Maui.ViewModels;assembly=NoPopsUI.Maui">
    <ContentPage.BindingContext>
        <viewmodels:Options />
    </ContentPage.BindingContext>
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}"
                            TextOverride="{Binding GoBackButtonText}"
                            CommandParameter="{Binding WebsitesParameter}"
                            IconOverride="{Binding BackButtonBehaviorIconOverride}" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout>
        <Border>
            <VerticalStackLayout>
                <Picker
                    x:Name="WebsitePicker"
                    Title="{Binding WebsitePickerTitle}"
                    ItemsSource="{Binding Websites}"
                    ItemDisplayBinding="{Binding SelectedWebsite.Name}"
                    SelectedItem="{Binding SelectedWebsite}" >
                </Picker>
                <Button
                    x:Name="DeleteUrlButton"
                    Text="{Binding DeleteUrlButtonText}"                    
                    Command="{Binding DeleteUrlCommand}"
                    ToolTipProperties.Text="{Binding DeleteSelectedWebsiteToolTip}"/>
                <Line
                    BackgroundColor="{StaticResource Secondary}"
                    HorizontalOptions="Fill" 
                    VerticalOptions="FillAndExpand" />
                <Entry
                    x:Name="UrlToAddEntry"
                    Placeholder="{Binding UrlToAddPlaceholder}"                
                    Text="{Binding UrlToAdd}" 
                    ClearButtonVisibility="WhileEditing"
                    Keyboard="Url" />
                <Button
                    x:Name="AddUrlButton"
                    Text="{Binding AddUrlButtonText}"
                    Command="{Binding AddUrlCommand}"
                    ToolTipProperties.Text="{Binding AddWebsiteToolTip}"/>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>