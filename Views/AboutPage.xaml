<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:NoPopsUI.Models"
             x:Class="NoPopsUI.Views.AboutPage">
    <ContentPage.BindingContext>
		<models:About />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Image 
            Source="logo_nopopsui.png"
            Style="{StaticResource AppLogo}"
            />
        <Label
            x:Name="AppTitleLabel"
            Style="{StaticResource AppTitle}"
            Text="{Binding AppTitle}" />
        <Label
            x:Name="AppVersionLabel"
            Style="{StaticResource AppVersion}"
            Text="{Binding AppVersion}" />
        <Label
            x:Name="AppDescriptionLabel"
            Style="{StaticResource AppDescription}"
            Text="{Binding AppDescription}" />        
        <Button
            Text="Source on GitHub" 
            Clicked="OnButtonClickedGoToGitHub" />
    </VerticalStackLayout>
</ContentPage>