<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:NoPopsUI.Models"
             x:Class="NoPopsUI.Views.CustomPage">
    <ContentPage.BindingContext>
        <models:Custom />
    </ContentPage.BindingContext>
    <VerticalStackLayout
        Margin="5"
        Spacing="5">
        <HorizontalStackLayout
            Spacing="5">
            <Entry 
                x:Name="TargetUrlEntry"
                Placeholder="{Binding Placeholder}"
                Text="{Binding TargetUrl}"
                Keyboard="Url" 
                ReturnType="Go"
                HorizontalOptions="Fill" />
            <Button
                x:Name="GoToButton"
                Clicked="OnGoToButtonClicked"
                HeightRequest="30"
                WidthRequest="30"
                Text="Go" />
        </HorizontalStackLayout>
        <WebView
            x:Name="CustomWebView" 
            Source="{Binding SanitizedUrl}"
            HorizontalOptions="Fill"
            VerticalOptions="FillAndExpand" />
    </VerticalStackLayout>
</ContentPage>