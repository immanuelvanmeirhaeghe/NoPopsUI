<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoPopsUI.Views.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo_nopopsui.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="logo for the app NoPopsUI" />

            <Label
                Text="NoPopsUI"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Enjoy watching on AniWave or reading on MangaFire. No popups out of nowhere!"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Enjoy watching on AniWave or reading on MangaFire. No popups out of nowhere!" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
